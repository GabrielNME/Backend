<div class="centrado" style="padding:200px 0 200px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo producto</h4>
            <form action="/admin/productos/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control"
                    placeholder="Titulo" name="nombre">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"
                    placeholder="Costo" name="precio">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"
                    placeholder="Stock" name="stock">
                </div>
                <div class="form-group">
                    <label>Portada:<input type="file" class="form-control"
                    id="imagen"name="imagen"></label>

                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                {{#if error}}
                    <p>{{message}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>